!defined(QMAKE_QFUI_CORE_INCLUDED, var) {
    QMAKE_QFUI_CORE_INCLUDED = 1

    # CMake variables
    QMAKE_QFUI_INSTALL_PREFIX = @QMAKE_QFUI_INSTALL_PREFIX@
    QMAKE_QFUI_INSTALL_BINDIR = @QMAKE_QFUI_INSTALL_BINDIR@
    QMAKE_QFUI_INSTALL_LIBDIR = @QMAKE_QFUI_INSTALL_LIBDIR@
    QMAKE_QFUI_INSTALL_INCDIR = @QMAKE_QFUI_INSTALL_INCDIR@
	
    # Shared include directory
    INCLUDEPATH += \
        $$QMAKE_QFUI_INSTALL_PREFIX/$$QMAKE_QFUI_INSTALL_INCDIR/QFluentWidgets

    # Shared link directory
    LIBS += \
        "-L$$QMAKE_QFUI_INSTALL_PREFIX/$$QMAKE_QFUI_INSTALL_LIBDIR"
    
    CONFIG(debug, debug|release) {
        LIBS += -l@QMAKE_QFUI_CORE_NAME_DEBUG@
    } else {
        LIBS += -l@QMAKE_QFUI_CORE_NAME_RELEASE@
    }
}